{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "outDir": "src/public/assets/js",
        "rootDir": "src/client",
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/client/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "_site",
        ".cache/tsbuild"
    ]
}