---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Mock project data for testing
const mockProjects = [
  {
    url: '/projects/test-project-1',
    fileSlug: 'test-project-1',
    data: {
      title: 'Test Project 1',
      description: 'This is a test project to demonstrate the ProjectCard component functionality. It shows how the component handles different types of content and styling.',
      heroImage: '/assets/images/test-project-1.jpg',
      alt: 'Test Project 1 Screenshot',
      tags: ['React', 'TypeScript', 'Tailwind CSS', 'Astro']
    }
  },
  {
    url: '/projects/test-project-2',
    fileSlug: 'test-project-2',
    data: {
      title: 'Test Project 2',
      description: 'Another test project with different content to show the component versatility.',
      heroImage: '/assets/images/test-project-2.jpg',
      alt: 'Test Project 2 Screenshot',
      tags: ['Python', 'Django', 'PostgreSQL', 'Docker', 'AWS', 'Redis']
    }
  }
];
---

<Layout title="Test Layout" description="Testing the new Astro layout">
  <h1 class="text-3xl font-bold text-blue-600 mb-4">Hello World!</h1>
  <p class="text-gray-600 mb-4">
    This page tests the new Layout.astro component and ProjectCard component.
  </p>
  
  <div class="bg-green-100 p-4 rounded-lg mb-8">
    <p class="text-green-800">
      âœ… Layout component is working correctly!
    </p>
  </div>

  <h2 class="text-2xl font-semibold mb-6">Project Cards Test</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" role="list">
    {mockProjects.map(project => (
      <ProjectCard project={project} />
    ))}
  </div>
</Layout>
