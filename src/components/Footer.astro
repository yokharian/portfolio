---
// Footer component for Astro
import siteData from '../data/site.json';

const currentYear = new Date().getFullYear();
---

<footer class="mt-16 border-t bg-white">
  <div class="container mx-auto px-4 py-8 text-sm text-slate-600">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        {siteData.githubUrl && (
          <a 
            href={siteData.githubUrl} 
            class="hover:text-sky-700" 
            rel="me noopener" 
            target="_blank"
          >
            GitHub
          </a>
        )}
        {siteData.linkedinUrl && (
          <a 
            href={siteData.linkedinUrl} 
            class="hover:text-sky-700" 
            rel="me noopener" 
            target="_blank"
          >
            LinkedIn
          </a>
        )}
        {siteData.calendlyUrl && (
          <a 
            href={siteData.calendlyUrl} 
            class="hover:text-sky-700" 
            target="_blank"
          >
            Calendly
          </a>
        )}
        {siteData.email && (
          <a 
            href={`mailto:${siteData.email}`} 
            class="hover:text-sky-700"
          >
            Email
          </a>
        )}
      </div>
      <div class="text-slate-500">
        &copy; {currentYear} {siteData.author}
      </div>
    </div>
  </div>
</footer>
