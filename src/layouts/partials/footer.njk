<footer class="mt-16 border-t bg-white">
  <div class="container mx-auto px-4 py-8 text-sm text-slate-600">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        {% if site.githubUrl %}<a href="{{ site.githubUrl }}" class="hover:text-sky-700" rel="me noopener" target="_blank">GitHub</a>{% endif %}
        {% if site.linkedinUrl %}<a href="{{ site.linkedinUrl }}" class="hover:text-sky-700" rel="me noopener" target="_blank">LinkedIn</a>{% endif %}
        {% if site.calendlyUrl %}<a href="{{ site.calendlyUrl }}" class="hover:text-sky-700" target="_blank">Calendly</a>{% endif %}
        {% if site.email %}<a href="mailto:{{ site.email }}" class="hover:text-sky-700">Email</a>{% endif %}
      </div>
      <div class="text-slate-500">&copy; {{ site.currentYear }} {{ site.title or 'Sofia Escobedo' }}</div>
    </div>
  </div>
</footer>
