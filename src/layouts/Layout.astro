---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SkipLink from '../components/SkipLink.astro';
import JsonLD from '../components/JsonLD.astro';
import { getSiteData } from '../data';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  lang?: string;
}

const { 
  title, 
  description,
  image,
  canonical,
  lang
} = Astro.props;

// Get site data
const siteData = getSiteData();

// Get current locale
const currentLocale = Astro.currentLocale || lang || siteData.defaultLanguage;
const currentPath = Astro.url.pathname;

// Generate canonical URL
const canonicalUrl = canonical || `${siteData.url}${currentPath}`;

// Generate page title
const pageTitle = title.includes(siteData.author) ? title : `${title} | ${siteData.title}`;

// Use site data for defaults
const pageDescription = description || siteData.description;
const pageImage = image || siteData.seo.defaultImage;
---

<!DOCTYPE html>
<html lang={currentLocale}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription}>
    <meta name="author" content={siteData.author}>
    <link rel="canonical" href={canonicalUrl}>
    
    <!-- Critical Resource Preloading -->
    <link rel="preload" href="/assets/images/183728692.webp" as="image" type="image/webp">
    <link rel="preload" href="/assets/css/styles.css" as="style">
    
    <!-- Favicon and App Icons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    
    <!-- DNS Prefetch for external resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    
    <!-- Core Web Vitals optimization -->
    <meta name="theme-color" content={siteData.seo.themeColor}>
    <meta name="color-scheme" content="light">
    <meta name="format-detection" content="telephone=no">
    
    <!-- Open Graph tags -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:image" content={pageImage}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content={siteData.title}>
    <meta property="og:locale" content={currentLocale}>
    
    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={pageDescription}>
    <meta name="twitter:image" content={pageImage}>
    
    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index, follow">
    <meta name="googlebot" content="index, follow">
    <meta name="theme-color" content={siteData.seo.themeColor}>
    <meta name="msapplication-TileColor" content={siteData.seo.msTileColor}>
    
    <!-- Cache control headers for less aggressive caching -->
    <meta http-equiv="Cache-Control" content="public, max-age=3600, s-maxage=7200">
    <meta http-equiv="Expires" content="3600">
    
    <!-- Language alternates -->
    <link rel="alternate" href={`${siteData.url}/en${currentPath.replace(/^\/[a-z]{2}/, '')}`} hreflang="en">
    <link rel="alternate" href={`${siteData.url}/es${currentPath.replace(/^\/[a-z]{2}/, '')}`} hreflang="es">
    <link rel="alternate" href={canonicalUrl} hreflang="x-default">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/styles.css">
    
          <!-- Scripts -->
          <script id="rum-config" type="application/json">{"enabled": false}</script>
          <script src="/assets/js/rum.js" defer is:inline></script>
    <!-- JSON-LD Structured Data -->
    <JsonLD type="Person" data={{
      "name": siteData.author,
      "description": siteData.description,
      "url": siteData.url,
      "sameAs": [
        siteData.socialUrls.github,
        siteData.socialUrls.linkedin
      ]
    }} />
  </head>
  
  <body class="min-h-screen bg-slate-50 text-slate-800 antialiased">
    <SkipLink />
    <Header />
    
    <main id="main" class="container mx-auto px-4 py-8">
      <slot />
    </main>
    
    <Footer />
  </body>
</html>
