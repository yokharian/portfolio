---
layout: base.njk
---

<article class="prose prose-slate max-w-none">
  {% if banner %}
    <figure class="-mx-4 mb-6">
      <img src="{{ banner }}" alt="{{ title }} banner" loading="lazy" class="w-full h-auto rounded" />
    </figure>
  {% endif %}

  <header class="mb-6">
    <h1 class="!mb-2">{{ title }}</h1>
    <p class="text-sm text-slate-500 !mt-0">
      {% if employer %}<span class="font-medium text-slate-700">{{ employer }}</span>{% endif %}
      {% if startDate %}
        · <time datetime="{{ startDate | date('yyyy-LL-dd') }}">{{ startDate | date('yyyy-LL-dd') }}</time>
      {% endif %}
      {% if endDate %}
        — <time datetime="{{ endDate | date('yyyy-LL-dd') }}">{{ endDate | date('yyyy-LL-dd') }}</time>
      {% endif %}
    </p>

    {% if tags %}
      <div class="mt-3 flex flex-wrap gap-2">
        {% for t in tags %}
          <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs border" style="{% if t.color %}background: {{ t.color }};{% endif %}">{{ t.name }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </header>

  {% if thumbnail %}
    <img src="{{ thumbnail }}" alt="{{ title }} thumbnail" loading="lazy" class="w-full h-auto rounded mb-6" />
  {% endif %}

  {{ content | safe }}
</article>
