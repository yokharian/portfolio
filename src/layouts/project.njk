---
permalink: "/projects/{{ page.fileSlug }}/"
---
<div class="project">
  {% if heroImage %}
  <div class="relative w-full h-64 md:h-80 lg:h-96 overflow-hidden rounded-lg mb-8">
    <img src="{{ heroImage }}" alt="{{ title }}" class="w-full h-full object-cover" loading="lazy" decoding="async" />
  </div>
  {% endif %}

  <header class="mb-8">
    <h1 class="text-3xl md:text-4xl font-bold">{{ title }}</h1>
    <div class="mt-2 text-gray-500">
      <span class="sr-only">Project dates</span>
      <span>{{ startDate | dateRange(endDate, language) }}</span>
      {% if employer %}
        <span class="ml-2">â€¢ {{ employer }}</span>
      {% endif %}
    </div>
  </header>

  <article class="prose prose-slate max-w-none">
    {{ content | safe }}
  </article>

  {% if tags and tags.length %}
  <section class="mt-8">
    <h2 class="text-xl font-semibold mb-3">Technologies Used</h2>
    <ul class="flex flex-wrap gap-2">
      {% for t in tags %}
        <li><span class="inline-block bg-slate-100 text-slate-700 text-sm px-2 py-1 rounded">{{ t }}</span></li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}
</div>
