{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Personal portfolio site built with Astro and Tailwind CSS.",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run transpile:client && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "clean": "rimraf dist .astro",
    "transpile:client": "tsc --project tsconfig.client.json",
    "transpile:client:watch": "tsc --project tsconfig.client.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "amplify:dev": "npx ampx sandbox",
    "amplify:deploy": "npx ampx deploy",
    "amplify:delete": "npx ampx sandbox delete"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.13.8",
    "aws-amplify": "^6.15.6",
    "aws-rum-web": "^1.25.0"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.2.0",
    "@astrojs/tailwind": "^5.1.2",
    "@aws-amplify/backend": "^1.16.1",
    "@aws-amplify/backend-cli": "^1.8.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.10",
    "autoprefixer": "^10.4.20",
    "jest": "^30.1.3",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.2"
  }
}
