{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Personal portfolio site built with Eleventy (11ty) and Tailwind CSS.",
  "scripts": {
    "dev": "npm-run-all -p dev:css dev:client dev:serve",
    "dev:serve": "npx eleventy --config=.eleventy.ts --serve --watch",
    "dev:css": "tailwindcss -i src/styles/tailwind.css -o src/assets/css/styles.css --watch",
    "dev:client": "tsc -p tsconfig.client.json --watch",
    "dev:ts": "tsc --watch --project tsconfig.json",
    "dev:nodemon": "nodemon",
    "typecheck": "ts-node src/scripts/run-typecheck.ts",
    "build": "npm run typecheck && npm run build:css && npm run build:client && npx eleventy --config=.eleventy.js",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o src/assets/css/styles.css --minify",
    "build:client": "tsc -p tsconfig.client.json",
    "build:ts": "tsc --project tsconfig.build.json",
    "clean": "rimraf _site .cache",
    "prepare": "husky",
    "test": "ts-node src/tests/test-with-types.ts",
    "test:legacy": "npm-run-all -s typecheck test:md test:fm test:dates test:content test:i18n test:build",
    "test:unit": "jest",
    "test:types": "tsc --noEmit",
    "test:md": "node .cache/tsbuild/src/tests/test-markdown.js",
    "test:fm": "node .cache/tsbuild/src/tests/test-frontmatter.js",
    "test:dates": "node .cache/tsbuild/src/tests/test-dates.js",
    "test:content": "node .cache/tsbuild/src/tests/test-content.js",
    "test:i18n": "node .cache/tsbuild/src/tests/test-i18n.js",
    "test:build": "node .cache/tsbuild/src/tests/test-build.js",
    "migration:status": "ts-node src/scripts/migration-status.ts",
    "migration:verify": "ts-node src/scripts/verify-build.ts",
    "optimize": "ts-node src/scripts/optimize.ts"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-multimd-table": "^4.2.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^3.0.0",
    "@types/browser-sync": "^2.29.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.10",
    "@types/postcss-load-config": "^2.0.1",
    "@types/tailwindcss": "^3.0.11",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "glob": "^11.0.3",
    "husky": "^9.1.6",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.7",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
