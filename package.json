{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Personal portfolio site built with Eleventy (11ty) and Tailwind CSS.",
  "scripts": {
    "dev": "npm-run-all -p dev:css dev:serve",
    "dev:serve": "eleventy --serve",
    "dev:css": "tailwindcss -i src/styles/tailwind.css -o public/assets/styles.css --watch",
    "build": "npm run build:css && eleventy",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o public/assets/styles.css --minify",
    "clean": "rimraf _site",
    "prepare": "husky",
    "test": "npm-run-all -s test:md test:fm test:dates test:content test:build",
    "test:md": "node scripts/test-markdown.js",
    "test:fm": "node scripts/test-frontmatter.js",
    "test:dates": "node scripts/test-dates.js",
    "test:content": "node scripts/test-content.js",
    "test:build": "node scripts/test-build.js"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "highlight.js": "^11.9.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-multimd-table": "^4.2.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.10",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "husky": "^9.1.6"
  }
}
